@model IList<Rota>

@{
    ViewData["Title"] = "Listar";
}

<h1>Listar</h1>

<table class="table">
    <tr>
        <th>Dia da Semana</th>
        <th>Descrição Rota</th>
        <th>Caminhão</th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DiaDaSemana</td>
            <td>@item.DescricaoRota</td>
            <td>@item.Caminhao</td>

            <td>
                <a asp-action="atualizar" class="btn btn-primary btn-sm"
                   asp-route-id="@item.RotaId">Editar</a>
                <!-- Botão para acionar modal -->
                <button onclick="codigo.value = @item.RotaId" class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalExemplo">
                    Excluir
                </button>
            </td>
        </tr>
    }

</table>

<!-- Modal -->
<div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Deseja Realmente Excluir?
            </div>
            <div class="modal-footer">
                <form asp-action="remover">
                    <input type="hidden" name="id" id="codigo" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>