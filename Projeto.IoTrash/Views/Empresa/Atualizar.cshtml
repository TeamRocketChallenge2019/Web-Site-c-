@model Empresa

@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar Empresa</h1>

<mensagem texto="@TempData["mensagem"]"></mensagem>

<form asp-action="atualizar">
    <input asp-for="EmpresaId" />
    <partial name="_formulario" />
    <botao texto="Atualizar" />
    <a asp-action="Listar" class="btn btn-default">Cancelar</a>
</form>